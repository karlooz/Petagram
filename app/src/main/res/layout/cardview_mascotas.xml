<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cvMascotas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    android:elevation="@dimen/elevation_cv">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_cv">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/pepe"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnhueso"
                android:layout_width="@dimen/tamaño_titulo"
                android:layout_height="@dimen/tamaño_titulo"
                android:background="@drawable/hueso"/>

            <TextView
                android:id="@+id/tvnombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:textSize="@dimen/tamaño_nombre"
                android:layout_marginLeft="@dimen/marginleft_nombre"
                android:layout_gravity="right"
                android:layout_weight=".1"/>

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/likes"
                android:textSize="@dimen/tamaño_nombre"
                android:layout_marginRight="@dimen/padding_cv"
                android:fontFamily="serif"/>

            <ImageView
                android:id="@+id/imgvlikes"
                android:layout_width="@dimen/tamaño_titulo"
                android:layout_height="@dimen/tamaño_titulo"
                android:src="@drawable/hueso_relleno"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>