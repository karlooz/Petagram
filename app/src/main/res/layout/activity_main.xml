<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cv_fondo"
    tools:context="com.petagram.carlos.petagram.MainActivity">

    <include android:id="@+id/miActionBar"
        layout="@layout/activity_action_bar">
    </include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMascotas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_below="@id/miActionBar"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabMiFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camara"
        android:layout_marginTop="@dimen/margintop_fab"
        android:layout_marginLeft="@dimen/marginleft_fab"
        android:elevation="@dimen/elevation_fab"/>
</RelativeLayout>
